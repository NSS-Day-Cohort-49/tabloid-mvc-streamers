@model TabloidMVC.Models.UserProfile

@{
    ViewData["Title"] = "Activate";
}

<h1>Activate</h1>

<h3>Are you sure you want to Activate this User?</h3>
<div>
    <h4>@Model.DisplayName</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            Full Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            First Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            Last Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            User Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DisplayName)
        </dd>
        <dt class="col-sm-2">
            Email Address:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Date Created:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreateDateTime)
        </dd>
        <dt class="col-sm-2">
            Profile Type:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserType.Name)
        </dd>
        <dt class="col-sm-2">
            User Activated:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class="col-sm-2">
            Profile Avatar:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageLocation)
        </dd>
    </dl>

    <form asp-action="Activate">
        <input type="submit" value="Activate" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
